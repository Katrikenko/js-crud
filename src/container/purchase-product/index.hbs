<main>
	<section>
		<div class="form">
			{{> heading title="Інформація про товар"}}

			{{#with data.product}}
			<form action="/purchase-create?id={{id}}" method="POST">
				<div class="product-info">
					<img src="{{img}}" alt="{{title}}" class="product-info__image">
					<h2 class="card__title">{{title}}</h2>
					<p class="product-info__subtitle">{{description}}</p>

					{{>divider}}

					{{#each category}}
					<span class="card__category card__category--{{id}}">{{text}}</span>
					{{/each}}

					{{>divider}}

					{{> field label="Кількість" type="number" name="amount" value="1"}}

					<button class="form__button">Купити зараз: {{price}}₴</button>
				</div>
			</form>
			{{/with}}

			{{> heading title="Інші товари" info="Комп'ютери та ноутбуки"}}

			<div class="product-list">
				{{#each data.list}}
				{{> purchase-product data=this}}
				{{/each}}
			</div>
		</div>
	</section>
</main>